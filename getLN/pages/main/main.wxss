/* pages/test/test.wxss */
.main_layout{
  padding-top: 30px;
  text-align: center;
}
.main_layout image{
  display: flex;
  width:300px;
  height:200px;
  margin:10px auto;
}
.section{
  padding:15px;
  color: #666;
}
.section view{
  
  padding:5px 0;
}
.section input.input-text{
  height:34px;
  padding-left:5px;
  font-size: 16px;
  color: #333;
  width:70%;
  display: inline-block;
  margin-left: 20px;
  border-bottom:1px solid #ccc;
}
.section2{
  padding:15px;
  position: absolute;
  bottom:40px;
  left:0;
}
.section button{
  display: block;
  width:300px;
  height:40px;
  line-height:40px;
  text-align: center;
  border:0;
  color: #FFFFFF;
  background: -webkit-linear-gradient(left, #da2d33 , #e76b51);
  background: -o-linear-gradient(right, #da2d33, #e76b51);
  background: -moz-linear-gradient(right, #da2d33, #e76b51);
  background: linear-gradient(to right, #da2d33 , #e76b51);
  -webkit-border-radius:100px;
  -moz-border-radius:100px;
  border-radius:100px;
  font-size:18px;
  margin-bottom:10px; 
}